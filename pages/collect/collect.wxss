/* pages/collect/collect.wxss */
.warn_section{
	background: #e64340;
	color: #fff;
	height: 40px;
	line-height: 40px;
	margin-bottom: 10px;
	text-align: center;
}

.section{
	padding:0 100rpx;
	margin:20px 0;
}

.section text{
	margin-bottom: 5px;
	display: inline-block;
}

.section input{
	border: 1px solid #ddd;
	height: 60px;
	line-height: 60px;
	padding-left: 5px;
}

.section .picker{
	padding-left: 5px;
	color: #888;
}

.btn-area{
	display: flex;
	align-items: center;
	justify-content: space-around;
}

.btn-area button{
	margin-top: 30px;
	display: inline-block;
	width: 120px;
	height: 60px;
	line-height: 60px;
	border-radius: 6px;
}

.btn-area button:first-child{
	background-color:  #596b95;
	color:#fff;
}

.btn-area button:last-child{
	background-color: #fff;
	color:  #596b95;
}
